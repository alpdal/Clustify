<!DOCTYPE html>
<html>
  <head>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
  <!-- Standard Meta -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  <link rel="icon" href={{ url_for('static', filename='img/spotify_favicon.png') }}>

  <!-- Site Properties -->
  <title>Clustify</title>

  <style type="text/css"> 
 
    .masthead {
        background-image: url('{{ url_for('static', filename='img/mixer.jpg') }}') !important;
        background-size: cover !important;
}
  </style>


  <link href="{{ url_for('static', filename='dist/css/app.css') }}" rel="stylesheet" type="text/css">


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://oss.maxcdn.com/semantic-ui/2.1.4/semantic.min.js"></script>


  </head>
  


<div class="ui inverted vertical masthead center aligned segment">

        <div class="ui fluid container">
          <div class="ui large secondary inverted pointing menu">
                <div class="left item">
                <i class="huge play circle icon"></i><a class="brand">Clustify</a>
                </div>
          </div>
        </div>
</div>



<div class="ui vertical stripe segment">
    <div class="ui text container">
        <h2>Choose playlist/s to be created</h2>
        <p></p>
        <p></p>
    </div>


    <form method="post">
        {{ form.hidden_tag() }}
        <div class="form-group">
            {% for i in form.multicheck %}
                {% set number = i.data | int %}
                <div class="ui styled fluid accordion">
                    <div class="active title">
                        <i class="dropdown icon"></i>
                        <p> {{ i }}  {{ emojis[number] }}  Cluster{{ number+1 }}</p>
                    </div>
                    <div class="active content">
                        {% for name in track_names[number] %}
                            {{ name }}
                            <span style="color: #1DB954;"> {{ " | " if not loop.last }}</span>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
        <button class="huge ui button" type="submit">Submit</button>
    </form>
</div>

<div class="ui inverted vertical footer segment">
<div class="ui container">
    <div class="ui stackable inverted divided equal height stackable grid">
    <div class="ten wide column">
        <h4 class="ui inverted header">Clustify</h4>
        <p>
        Powered by <a href="http://spotify.com">Spotify</a>. Created by <a href="https://github.com/alpdal">@alpdal</a>.
        </p>
    </div>
    </div>
</div>
</div>


    <script>
        $('.ui.accordion')
        .accordion()
        ;
    </script>

  </body>
</html>
